<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"

    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!--android:clipToPadding="true"-->
    <!--android:background="@android:color/holo_green_light"-->

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear All"
                android:textSize="14sp"
                android:padding="16dp"
                android:textColor="@android:color/white"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="monospace"
                android:text="FILTERS: 0"

                android:textSize="18sp"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:padding="16dp"/>

            <ImageButton

                android:id="@+id/cancel"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/cancel"
                android:background="@color/black"
                android:layout_alignParentRight="true"

                android:padding="16dp"
                android:layout_margin="16dp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/forLines"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            />
        

        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <CheckBox
                        android:id="@+id/fb_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox_fb"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:id="@+id/fb_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Facebook"
                        android:textColor="@color/fontForBlack"
                        android:textSize="16sp"
                        android:padding="5dp"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <CheckBox
                        android:id="@+id/twitter_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox_twitters"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:id="@+id/twitter_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Twitter"
                        android:textColor="@color/fontForBlack"
                        android:textSize="16sp"
                        android:padding="5dp"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <CheckBox
                        android:id="@+id/google_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox_other"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/google_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Google"
                        android:textColor="@color/fontForBlack"
                        android:textSize="16sp"
                        android:padding="5dp"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="8dp">

                    <CheckBox
                        android:id="@+id/other_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox_other"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/other_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Other"
                        android:textColor="@color/fontForBlack"
                        android:textSize="16sp"
                        android:padding="5dp"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>
    </ScrollView>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/forLines"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:layout_gravity="center"
            android:textColor="@color/forLines"
            android:textAppearance="?android:textAppearanceLarge"/>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp">

                <CheckBox
                    android:id="@+id/male_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox_male"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/male_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textColor="@color/fontForBlack"
                    android:textSize="16sp"
                    android:padding="5dp"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp">

                <CheckBox
                    android:id="@+id/female_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox_female"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/female_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:textColor="@color/fontForBlack"
                    android:textSize="16sp"
                    android:padding="5dp"
                    android:layout_gravity="center"/>
            </LinearLayout>


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/forLines"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:layout_gravity="center"
            android:textColor="@color/forLines"
            android:textAppearance="?android:textAppearanceLarge"/>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp">

                <Button
                    android:id="@+id/start_check"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="Start Date"
                    android:textColor="@color/fontForBlack"
                    android:textSize="16sp"
                    android:padding="5dp"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp">



                <Button
                    android:id="@+id/end_check"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="End Date"
                    android:textColor="@color/fontForBlack"
                    android:textSize="16sp"
                    android:padding="5dp"
                    android:layout_gravity="center"/>
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/f_exit"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="APPLY FILTERS"
            android:textAllCaps="true"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:layout_marginTop="31dp"
            android:textAppearance="?android:textAppearanceMedium"/>



    </LinearLayout>



</android.support.v4.widget.NestedScrollView>